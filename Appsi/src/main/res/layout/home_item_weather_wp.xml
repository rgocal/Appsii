<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:minWidth="120dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/weather_location_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/clear_day"
        />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:minWidth="24dp"
        android:background="?attr/appsiTextShadow"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="1"
        android:padding="2dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="12sp"
        tools:text="-3ยบ"
        />

    <TextView
        android:id="@+id/primary_text"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/appsiTextShadow"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_small_clear_day"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:padding="4dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="12sp"
        tools:text="Sunny"
        />


    <ImageView
        android:id="@+id/overflow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:src="?attr/appsiOverflowButtonInverse"
        />


</RelativeLayout>