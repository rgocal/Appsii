<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:minHeight="100dp"
    android:minWidth="100dp"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/title"
        style="?attr/appsiDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="16dip"
        android:paddingStart="16dip"
        android:paddingTop="16dip"
        android:textColor="#cc000000"
        tools:text="@string/add_tag"
        />

    <TextView
        android:id="@+id/content"
        style="?attr/appsiDialogContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="16dip"
        android:paddingStart="16dip"
        android:paddingTop="16dip"
        android:textColor="#88000000"
        tools:text="@string/tag_name"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dip"
        android:layout_marginTop="16dip"
        android:hint="@string/tag_name"
        android:inputType="textCapWords"
        android:textColor="#CC000000"
        />

    <CheckBox
        android:id="@+id/expand_by_default"
        style="?attr/appsiDialogContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/expand_by_default"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        >

        <TextView
            android:id="@+id/cancel"
            style="@style/TextAppearance.Appsi.Holo.Medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@android:string/cancel"
            android:textAllCaps="true"
            android:textColor="#cc000000"
            tools:text="Cancel"
            />

        <TextView
            android:id="@+id/accept"
            style="@style/TextAppearance.Appsi.Holo.Medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@android:string/ok"
            android:textAllCaps="true"
            android:textColor="?attr/colorPrimary"
            tools:text="Accept"
            />

    </LinearLayout>

</LinearLayout>