<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="120dp"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/widget_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="?attr/appsiAppWidgetCardBackground"
        app:cardElevation="2dp"
        >

        <FrameLayout
            android:id="@+id/widget_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="120dp"
            />

        <TextView
            android:id="@+id/choose_app_widget_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="@string/choose_app_widget"
            android:textAppearance="?attr/appsiActionBarTextStyle"
            android:textColor="?android:attr/textColorPrimary"
            />

        <TextView
            android:id="@+id/error_loading_widget_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="@string/error_loading_widget"
            android:textAppearance="?attr/appsiActionBarTextStyle"
            android:textColor="?android:attr/textColorPrimary"
            android:visibility="gone"
            />

    </android.support.v7.widget.CardView>


</FrameLayout>