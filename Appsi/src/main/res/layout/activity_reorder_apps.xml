<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/app_bar_ex"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/colorPrimary"
        android:paddingStart="53dp"
        >

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="100dp"/>
    </RelativeLayout>

    <fragment
        android:id="@+id/reorder_apps_fragment"
        android:name="com.appsimobile.appsii.module.apps.ReorderAppsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_ex"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_ex"
        android:background="@drawable/ab_solid_shadow_holo"
        />


</RelativeLayout>