<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/popup_dialog_width"
                android:layout_height="wrap_content"
                android:padding="6dip">

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/font_large"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_text"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/font_large"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/value_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/value_text"
        android:padding="16dp"
        android:textSize="@dimen/font_large"
        />

    <TextView
        android:id="@+id/value_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/value_text"
        android:layout_gravity="end"
        android:padding="16dp"
        android:textSize="@dimen/font_large"
        />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/value_right_text"
        android:gravity="center_horizontal"

        />


</RelativeLayout>
