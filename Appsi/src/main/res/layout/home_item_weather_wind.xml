<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:minWidth="120dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/weather_location_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/clear_day"
        />

    <ImageView
        android:id="@+id/weather_windmill_large"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/windmill"
        />

    <ImageView
        android:id="@+id/weather_windmill_medium"
        android:layout_width="36dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="34dp"
        android:scaleType="fitCenter"
        android:src="@drawable/windmill"

        />

    <TextView
        android:id="@+id/wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="4dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="12sp"
        tools:text="18 km/h"
        />

    <TextView
        android:id="@+id/primary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:background="?attr/appsiTextShadow"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:padding="4dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="12sp"
        tools:text="-3/12"
        />


    <ImageView
        android:id="@+id/overflow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:src="?attr/appsiOverflowButtonInverse"
        />


</FrameLayout>