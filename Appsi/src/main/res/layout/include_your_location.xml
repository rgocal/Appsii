<RelativeLayout
    android:id="@+id/location_search"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="?android:listPreferredItemHeight"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/appsiDividerColor"
        />

    <TextView
        android:id="@+id/your_location_title"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:text="Your location is Amsterdam, Netherlands. Use this location?"
        />


    <Button
        android:id="@+id/apply_current_location_button"
        style="@style/PrimaryColorButtonBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/your_location_title"
        android:layout_marginBottom="8dp"
        android:text="@android:string/ok"
        />

    <Button
        android:id="@+id/cancel_current_location_button"
        style="@style/PrimaryColorButtonBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/your_location_title"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@id/apply_current_location_button"
        android:text="@string/nope"
        />


</RelativeLayout>