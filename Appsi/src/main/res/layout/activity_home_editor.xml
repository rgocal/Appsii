<FrameLayout
    android:id="@+id/home_editor_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <FrameLayout
        android:id="@+id/move_left"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/small_fab"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_chevron_left_white_18dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/move_right"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/small_fab"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_chevron_right_white_18dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/move_up"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/small_fab"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_expand_less_white_36dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/move_down"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/small_fab"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_expand_more_white_36dp"/>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/increase_height"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/small_fab"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_unfold_more_white_18dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/decrease_height"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/small_fab"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_unfold_less_white_18dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/increase_span"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/small_fab"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_unfold_more_horizontal_white_36dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/decrease_span"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/small_fab"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_unfold_less_horizontal_white_36dp"/>

    </FrameLayout>


</FrameLayout>