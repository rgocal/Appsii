<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/forecast_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_weather_snow_rain"
        />

    <TextView
        android:id="@+id/forecast_temperature_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_max_temp_16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="21ยบ"
        />

    <TextView
        android:id="@+id/forecast_temperature_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/forecast_temperature_high"
        android:drawableStart="@drawable/ic_min_temp_16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="12ยบ"

        />

    <TextView
        android:id="@+id/forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/forecast_temperature_low"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="Tomorrow"
        />

    <TextView
        android:id="@+id/forecast_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="72dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?android:attr/textColorSecondary"
        tools:text="Snow and rain"
        />

</RelativeLayout>