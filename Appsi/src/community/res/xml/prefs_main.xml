<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:title="@string/pref_category_general"
        >
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.appsimobile.appsii.LookAndFeelActivity"
            android:targetPackage="com.appsimobile.appsii"/>
    </Preference>

    <Preference
        android:title="@string/hotspots_and_pages"
        >

        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.appsimobile.appsii.hotspotmanager.ManageHotspotsActivity"
            android:targetPackage="com.appsimobile.appsii"/>
    </Preference>
    <Preference
        android:summary="Add your own homepages"
        android:title="Home pages"
        >

        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.appsimobile.appsii.module.home.homepagesmanager.ManageHomePagesActivity"
            android:targetPackage="com.appsimobile.appsii"/>
    </Preference>

    <Preference
        android:title="@string/weather"
        >

        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.appsimobile.appsii.module.weather.WeatherPreferencesActivity"
            android:targetPackage="com.appsimobile.appsii"/>
    </Preference>

    <!-- 7. About -->
    <Preference
        android:title="@string/pref_about_title"
        >
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.appsimobile.appsii.AboutActivity"
            android:targetPackage="com.appsimobile.appsii"/>
    </Preference>


</PreferenceScreen>